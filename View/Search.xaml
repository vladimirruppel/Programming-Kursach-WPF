<UserControl x:Class="prog3_kursach.View.Search"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:prog3_kursach.View"
             mc:Ignorable="d" 
             Height="45" d:DesignWidth="800">
    <Grid>
        <Image Source="../Media/search.png" Width="20" Height="20" Panel.ZIndex="1" HorizontalAlignment="Left" Margin="12.5" />
        <TextBox Background="Transparent" Padding="42.5,0,0,0" Text="{Binding SearchText}" VerticalContentAlignment="Center" FontSize="18" BorderThickness="0,0,0,1" />
    </Grid>
</UserControl>
