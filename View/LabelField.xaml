<UserControl x:Class="prog3_kursach.View.LabelField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:prog3_kursach.View"
             mc:Ignorable="d" 
             Height="61" d:DesignWidth="800">
    <StackPanel Orientation="Vertical" MaxWidth="800">
        <TextBlock Text="{Binding Label}" FontSize="16" />
        <TextBox Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="{Binding IsReadOnly}" Height="40" FontSize="18" VerticalAlignment="Center" MaxLines="1" />
    </StackPanel>
</UserControl>
